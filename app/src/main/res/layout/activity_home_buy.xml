<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.HomeBuyActivity">
<ImageView
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:id="@+id/buy_image"
    app:layout_constraintTop_toTopOf="parent"
    />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buy_name"
        app:layout_constraintTop_toBottomOf="@id/buy_image"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <com.google.android.material.tabs.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buy_tab"
        app:layout_constraintTop_toBottomOf="@id/buy_name"
        />
    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/buy_tab"
        android:id="@+id/buy_vap"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>