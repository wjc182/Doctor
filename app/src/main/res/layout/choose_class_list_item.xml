<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<ImageView

    android:layout_width="225dp"
    android:layout_height="150dp"
    android:id="@+id/choose_class_Logo"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"

    />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/choose_class_Logo"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/choose_class_price"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textColor="#EF0420"
            android:textSize="15sp"
         />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:background="@drawable/now_buy"
            android:text="立即购买"
            android:textColor="#FF530C" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>