<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#EFEFEF"
    tools:context=".fragment.HomeFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/ziXun"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/zixun"
        android:paddingLeft="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/ed_SouSu"
        app:layout_constraintLeft_toRightOf="@id/ziXun"
        android:hint="健康管理师"
        android:layout_marginLeft="50dp"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/ed_sou"
        android:src="@drawable/home_sou"

        />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/keFu"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ed_SouSu"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/kefu"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rew_home_fragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ziXun"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="162dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
